<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
    
    <ImageView 
        android:id="@+id/classiy_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_launcher"
        android:layout_marginTop="11dp"
        />
    <TextView
        android:id="@+id/classiy_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="www"
        android:layout_toRightOf="@+id/classiy_img"
        android:layout_alignTop="@+id/classiy_img"
         />
    <TextView 
        android:id="@+id/classiy_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="cccc"
        android:layout_toRightOf="@+id/classiy_img"
        android:layout_alignBottom="@+id/classiy_img"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/classiy_text"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:src="@drawable/arrow" />

</RelativeLayout>